<html lang="{{@site.lang}}" class="light">
<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{!-- Fonts -> Inter=400,500,600,700 PT Serift=400,700 --}}
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=PT+Serif:ital,wght@0,400;0,700;1,400&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'"/>
    <noscript><link rel="preconnect" href="https://fonts.gstatic.com"><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=PT+Serif:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet"></noscript>
    {{!-- <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=PT+Serif:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet"> --}}

    {{!-- Styles --}}
    {{!-- <link rel="stylesheet" type="text/css" href="{{asset "styles/main.css"}}"/> --}}
    <style>{{> "main-styles"}}</style>

    <script>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.querySelector('html').classList.add('dark');
        } else {
            document.querySelector('html').classList.remove('dark');
        }
    </script>

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
</head>
<body class="{{block "special_body_class"}}">
    <div class="simply-viewport flexColumnTop">
        {{!-- Header Content with User Account ./partials/layout/header-user-account.hbs --}}
        {{> "layout/header-user-account"}}
        {{!-- {{> "layout/header"}} --}}

        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        <main class="simply-main relative {{{block "special_site_main_class"}}}">{{{body}}}</main>

        {{!-- Footer [ CopyRight - Menu  - Social Media ] ./partials/layout/footer-dark.hbs --}}
        {{>"layout/footer-with-menu"}}
    </div>

    {{!-- Search box --}}
    {{> "widget/search"}}

    {{!-- Loandig Bar --}}
    <div class="loadingBar top-0 fixed right-0 left-0 hidden"></div>

    {{!-- Icons --}}
    {{> "icons/icons-symbol-defs"}}

    {{!-- Blog URL --}}
    <script>
        var siteUrl = '{{@site.url}}';
        var siteSearch = '{{asset "scripts/search.js"}}';
        var prismJs = '{{asset "scripts/prismjs.js"}}';
        var prismJsComponents = 'https://cdnjs.cloudflare.com/ajax/libs/prism/1.21.0/components/';
    </script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}

    {{!-- Notifications ./partials/notifications.hbs --}}
    {{#if @labs.members}}{{> "notifications"}}{{/if}}

    {{!-- script --}}
    {{{block "scripts"}}}

    {{!-- Main scripts --}}
    <script src="{{asset "scripts/main.js"}}"></script>

    {{!-- Paginastion --}}
    {{#if pagination.pages}}<script src="{{asset "scripts/pagination.js"}}" defer async></script>{{/if}}
</body>
</html>